<div class="page-header">
  <h1>Texter <small>Can I have your numba?</small></h1>
</div>
<div class="col-md-4">
  <h3>My Contacts</h3>
    <% @contacts.each do |contact|%>
      <p><strong><%= contact.name%></strong></p>
      <p><%= contact.number%> <%= link_to "-", contact_path(contact.id), method: "DELETE", :class => "btn-xs btn-danger" %>
                              <%= link_to "+", edit_contact_path(contact.id), :class => "btn-xs btn-success" %>
                              <%= link_to "SMS", messages_path(to: contact.number), :class => "btn-xs btn-primary" %></p>
    <% end %>
</div>
<div class="col-md-8">
  <h3>Add new contact</h3>

    <%= render 'form' %>
</div>



